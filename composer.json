{
  "name": "andrewscaya/ascmvc",
  "description": "A lightweight MVC framework for educational purposes",
  "type": "library",
  "license": "GPL-2.0-only",
  "keywords": [
    "ascmvc",
    "framework",
    "mvc",
    "education"
  ],
  "homepage": "https://github.com/andrewscaya/ascmvc",
  "authors": [
    {
      "name": "Andrew Caya",
      "email": "andrewscaya@yahoo.ca"
    }
  ],
  "require": {
    "php": "^7.0",
    "doctrine/dbal": "2.5.2",
    "doctrine/orm": "2.5.2",
    "filp/whoops": "2.3.1",
    "league/plates": "3.3.0",
    "nikic/fast-route": "1.3.0",
    "pimple/pimple": "3.2.3",
    "smarty/smarty": "3.1.33",
    "twig/twig": "2.6.0",
    "zendframework/zend-diactoros": "2.1.0",
    "zendframework/zend-eventmanager": "3.2.1",
    "zendframework/zend-stdlib": "3.2.1",
    "zendframework/zend-stratigility": "3.0.2",
    "container-interop/container-interop": "1.2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "6.5.13",
    "squizlabs/php_codesniffer": "3.4.0"
  },
  "autoload": {
    "psr-4": {
      "Ascmvc\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AscmvcTest\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
