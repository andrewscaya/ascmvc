{
    "name": "lightmvc/ascmvc",
    "description": "A modular, event-driven and Swoole-enabled framework.",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "lightmvc",
        "ascmvc",
        "framework",
        "mvc",
        "middleware",
        "swoole"
    ],
    "homepage": "https://github.com/lightmvc/ascmvc",
    "authors": [
        {
            "name": "Andrew Caya",
            "email": "andrewscaya@yahoo.ca"
        }
    ],
    "require": {
        "php": "^7.1",
        "doctrine/dbal": "2.5.2",
        "doctrine/orm": "2.5.2",
        "filp/whoops": "2.3.1",
        "league/plates": "3.3.0",
        "nikic/fast-route": "1.3.0",
        "pimple/pimple": "3.2.3",
        "smarty/smarty": "3.1.33",
        "twig/twig": "2.6.0",
        "zendframework/zend-diactoros": "2.1.0",
        "zendframework/zend-eventmanager": "3.2.1",
        "zendframework/zend-stdlib": "3.2.1",
        "zendframework/zend-stratigility": "3.0.2",
        "container-interop/container-interop": "1.2.0",
        "atlas/orm": "3.1.0",
        "psr/cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "6.5.13",
        "squizlabs/php_codesniffer": "3.4.0",
        "mockery/mockery": "1.2.0",
        "pds/skeleton": "~1.0",
        "atlas/cli": "2.2.0",
        "linuxforphp/linuxforcomposer": "^1.0"
    },
    "autoload": {
        "files": [
            "src/functions/get-namespace-from-path.php"
        ],
        "psr-4": {
            "Ascmvc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AscmvcTest\\": "tests/",
            "Application\\": "tests/unit/app/controllers/Application",
            "Specialmodule\\": "tests/unit/app/controllers/Specialmodule"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit",
        "apidocs": "php phpDocumentor.phar",
        "pre-update-cmd": [
            "php -r \"if (file_exists('vendor/composer/linuxforcomposer.pid')) {copy('vendor/composer/linuxforcomposer.pid', 'linuxforcomposer.pid');}\""
        ],
        "post-update-cmd": [
            "php -r \"if (file_exists('linuxforcomposer.pid')) {rename('linuxforcomposer.pid', 'vendor/composer/linuxforcomposer.pid');}\""
        ]
    }
}
