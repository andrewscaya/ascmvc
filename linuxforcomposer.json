{
    "name": "linuxforphp/linuxforcomposer",
    "description": "A Composer interface to run 'Linux for PHP' Docker containers, Dockerfiles or docker-compose files.",
    "single": {
        "image": {
            "linuxforcomposer": {
                "php-versions": [
                    "8.0",
                    "8.1",
                    "8.2"
                ],
                "script": [
                    "/srv/tempo/ascmvc/data/lfphpdevuser.bash",
                    "composer self-update",
                    "pip install --upgrade pip",
                    "pip install sphinx",
                    "lfphp --apache --phpfpm"
                ],
                "thread-safe": "false"
            },
            "dockerfile": {
                "url": "",
                "container-name": "",
                "username": "",
                "token": ""
            }
        },
        "containers": {
            "modes": {
                "mode1": "detached",
                "mode2": "interactive",
                "mode3": "tty"
            },
            "ports": {
                "port1": [
                    "8080:80",
                    "8181:80",
                    "8282:80"
                ]
            },
            "volumes": {
                "volume1": "${PWD}/:/srv/tempo/ascmvc"
            },
            "persist-data": {
                "mount": "false",
                "root-name": "",
                "directories": {
                    "directory1": "",
                    "directory2": "",
                    "directory3": ""
                }
            }
        }
    },
    "docker-compose": {
        "url": "",
        "username": "",
        "token": ""
    },
    "lfphp-cloud": {
        "account": "",
        "username": "",
        "token": ""
    }
}